// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // pooled 6543
  directUrl = env("DIRECT_URL") // session pooler 5432
  schemas   = ["public", "auth"] // <-- NYTT: tillåt läsning av auth-schemat
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean?
  locale        String?
  collaborator  Boolean?
  emailVerified Boolean?
  // @@map("session")  // (valfritt) om du vill att tabellnamnet ska vara "session" i DB

  @@schema("public") // ⬅️ Viktigt
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public","auth"]
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean?
  locale        String?
  collaborator  Boolean?
  emailVerified Boolean?
  // @@map("session")  // (valfritt) om du vill att tabellnamnet ska vara "session" i DB

  @@schema("public") // ⬅️ Viktigt
}
